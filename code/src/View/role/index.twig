{% extends 'layout/app.twig' %}
{% block title %} Example index{% endblock %}

{% block body %}<br><br>
    <div class="container">

        <H1>Roles</H1>



        <table class="table">
            <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Power</th>
                <th>Options</th>
            </tr>
            </thead>
            {% for role in roles %}
                <tr>
                    <td><a href="{{ url_for('role.show',{'id':role.id}) }}">{{ role.name }}</a></td>
                    <td>{{ role.power }}</td>
                    <td>

                        <form action="{{ url_for('role.delete',{'id':role.id}) }}" method="POST">
                            <a class="btn btn-primary" href="{{ url_for('role.edit',{'id':role.id}) }}">Edit</a>
                            <button type="submit" class="btn btn-danger">X</button>
                            <input type="hidden" name="_METHOD" value="DELETE">
                        </form>
                    </td>
                </tr>
            {% endfor %}

        </table>
        <a class="btn btn-secondary" href="{{ url_for('role.create') }}">New</a>




    </div>

{% endblock %}